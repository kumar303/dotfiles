        "$tsc-watch"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "type": "shell"
    },
    {
      "command": "yarn test --watch",
      "group": "test",
      "isBackground": true,
      "label": "test-watch",
      "presentation": {
        "group": "test",
        "reveal": "always",
        "echo": true,
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "type": "shell"
    }
  ]
